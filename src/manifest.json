{
  "manifest_version": 3,
  "name": "maahir",
  "description": "Extension allowing you to pass even the hardest MeowCad quizzes",
  "version": "0.0.7",
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "action": {
    "default_title": "maahir",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "webRequest"
  ],
  "host_permissions": [
    "https://netacad.com/*",
    "https://www.netacad.com/*",
    "https://*.netacad.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://netacad.com/*",
        "https://www.netacad.com/*",
        "https://*.netacad.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_start"
    }
  ]
}
